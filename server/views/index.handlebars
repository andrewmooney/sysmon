<h2>All Servers</h2>
<div class="row">

    {{#each client}}
    <div class="col s4">
        <div class="card hoverable">
            <div id="{{name}}" class="card-content">
                <span class="card-title">{{name}}</span>
                <span class="date"> -- </span>
                <div class="row">
                    <section class="col s4 component">
                        <section class="cpu value">
                            --
                        </section>
                        <section class="cname">
                            CPU (%)
                        </section>
                    </section>
                    <section class="col s4 component">
                        <section class="vmem value">
                            --
                        </section>
                        <section class="cname">
                            Memory (%)
                        </section>
                    </section>
                    <section class="col s4 component">
                        <section class="smem value">
                            --
                        </section>
                        <section class="cname">
                            Swap (%)
                        </section>
                    </section>
                </div>
                <div class="card-action">
                    <a href="./api/{{name}}">History</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>